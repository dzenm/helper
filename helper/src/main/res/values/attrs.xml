<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ProgressBar">
        <attr name="textSize" format="dimension|reference" />
        <attr name="maxValue" format="integer" />
        <attr name="textStatic" format="boolean" />
        <attr name="progressHeight" format="dimension|reference" />
        <attr name="progressColor" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="PhotoLayout">
        <attr name="totalNumber" format="integer" />
        <attr name="columnNumber" format="integer" />
        <attr name="margin" format="dimension|reference" />
        <attr name="isPreview" format="boolean" />
        <attr name="deleteSize" format="dimension|reference" />
        <attr name="deleteIcon" format="reference" />
        <attr name="defaultIcon" format="reference" />
    </declare-styleable>

    <declare-styleable name="RatioImageView">
        <attr name="ratio" format="float" />
        <attr name="foregroundColor" format="color|reference" />
        <attr name="isCircle" format="boolean" />
        <attr name="cornerRadius" format="dimension|reference" />
        <attr name="top_left_cornerRadius" format="dimension|reference" />
        <attr name="top_right_cornerRadius" format="dimension|reference" />
        <attr name="bottom_left_cornerRadius" format="dimension|reference" />
        <attr name="bottom_right_cornerRadius" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="GridPhotoLayout">
        <attr name="margin_child" format="dimension|reference" />
        <attr name="columnCount" format="integer" />
    </declare-styleable>

    <!-- 自定义属性 -->
    <attr name="colorPrimaryText" format="color" />
    <attr name="colorSecondaryText" format="color" />
    <attr name="colorHintText" format="color" />
    <attr name="colorDivide" format="color" />
    <attr name="colorActive" format="color" />
    <attr name="colorInactive" format="color" />
</resources>