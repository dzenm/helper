<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <TextView
            android:id="@+id/tv_100"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="Dialog页面"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_101"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:text="Loading Dialog 页面"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_102"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="ViewPager画廊页面"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_103"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:onClick="onClick"
            android:text="权限请求页面"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_104"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="Drawable自定义页面"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_105"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:text="Toast分享粘贴板页面"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_106"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="Material Dialog"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_107"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:text="图片选择和预览页面"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_108"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="自定义View页面"
            android:textColor="@android:color/white" />

    </LinearLayout>
</layout>
